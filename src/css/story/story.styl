/* CUSTOM STORY STYLE */
body
  background-color white
  color black
  a
    color black

.prose-text
  max-width 40rem
  margin 0 auto
  text-align left
  line-height 1.7
  color black
  @media screen and (max-width 800px)
    padding 0px 15px
  p
    font-size 1em
  h3
    font-weight 700
    font-size 1.2em

.title
  font-family $atlas
  font-weight 700
  font-size 14px

.walking-grade
  font-family $atlas
  font-weight 700
  font-size 10px
  text-anchor middle
  fill grey
  text-transform uppercase

path.walking-grade
  fill none
  stroke grey
  stroke-width 1px

.first
  .graphic
    display flex
    flex-wrap wrap
    flex-direction row
    justify-content center
    height 360px
    margin 0 auto
    position relative
    width 1200px

  .legend
    font-size 13px

  h1
    font-size 15px
    text-align center

  rect
    stroke-width 2

  .label
   font-weight 600
